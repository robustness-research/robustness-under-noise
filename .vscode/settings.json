{
  // R Extension Settings
  "r.rterm.mac": "/usr/local/bin/R",
  "r.rpath.mac": "/usr/local/bin/R",
  "r.rterm.option": [
    "--no-save",
    "--no-restore",
    "--no-site-file"
  ],
  "r.alwaysUseActiveTerminal": true,
  "r.bracketedPaste": true,
  "r.sessionWatcher": true,
  
  // RMarkdown Settings
  "r.rmarkdown.enableCodeLens": true,
  "r.rmarkdown.chunkBackgroundColor": "rgba(128, 128, 128, 0.1)",
  
  // Enable R LSP for better language support
  "r.lsp.enabled": true,
  "r.lsp.debug": false,
  
  // Keyboard shortcut behavior
  "r.keybindings.commandPalette": true,
  
  // R plot settings
  "r.plot.useHttpgd": true,
  
  // Associate .Rmd files with R Markdown
  "files.associations": {
    "*.Rmd": "rmd"
  },
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./markdown",
    "-p",
    "*_test.py"
  ],
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true
}
